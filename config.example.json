{
  "ai": {
    "provider": "openai",
    "apiKey": "YOUR_API_KEY_HERE",
    "model": "gpt-4",
    "temperature": 0.7,
    "maxTokens": 2000
  },
  "curriculum": {
    "difficulty": "adaptive",
    "languages": ["en"],
    "includeVisualizations": true,
    "includeInteractivePuzzles": true,
    "targetAudience": "middle-school"
  },
  "bots": {
    "contentGenerator": {
      "enabled": true,
      "outputFormat": "json",
      "includeTeacherNotes": true,
      "includeLearningObjectives": true
    },
    "quizGenerator": {
      "enabled": true,
      "defaultQuestions": 10,
      "includeExplanations": true,
      "difficultyLevels": ["easy", "medium", "hard"]
    },
    "visualizationGenerator": {
      "enabled": true,
      "outputFormat": "html",
      "includeInteractivity": true
    },
    "assessment": {
      "enabled": true,
      "checkReadability": true,
      "checkAccuracy": true,
      "suggestImprovements": true
    }
  },
  "tutor": {
    "learningLevel": "beginner",
    "verbosity": "detailed",
    "interactive": true,
    "provideExamples": true,
    "explainConcepts": true
  },
  "output": {
    "directory": "./curriculum",
    "preserveFormatting": true,
    "createBackups": true
  }
}
